<div class="row todotable">
  <p id="notice"><%= notice %></p>

  <h1>To Do</h1>

  <table class="table table-striped table-hover">
    <thead>
      <%= render 'tableheader'%>
    </thead>

    <tbody >
      <% @todo.each do |task| %>
        <%= render task %>
      <% end %>
    </tbody>
  </table>

  <br>

  <h1>Doing</h1>

  <table class="table table-striped table-hover">
    <thead>
      <%= render 'tableheader'%>
    </thead>

    <tbody >
      <% @doing.each do |task| %>
      <%= render task %>
      <% end %>
    </tbody>
  </table>

  <br>
  <h1>Done</h1>

  <table class="table table-striped table-hover">
    <thead>
      <%= render 'tableheader'%>
    </thead>

    <tbody >
      <% @done.each do |task| %>
      <%= render task %>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-block" %>
</div>
