<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody >
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.content %></td>
        <td class="text-center"><%= link_to 'Show', task, class:"btn btn-primary" %></td>
        <td class="text-center"><%= link_to 'Edit', edit_task_path(task),class:"btn btn-info" %></td>
        <td class="text-center"><%= link_to 'Delete', task, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path, class: "btn btn-primary btn-block" %>
